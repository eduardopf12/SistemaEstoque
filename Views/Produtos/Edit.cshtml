@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Mostrar motivo dinamicamente se estoque for 0
        const estoqueInput = document.getElementById('estoqueInput');
        const motivoContainer = document.getElementById('motivoContainer');

        function toggleMotivo() {
            motivoContainer.style.display = parseInt(estoqueInput.value) === 0 ? 'block' : 'none';
        }
        estoqueInput.addEventListener('input', toggleMotivo);
        toggleMotivo();

        // Preview foto
        function previewFoto(input) {
            const img = document.getElementById("previewImagem");
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    img.src = e.target.result;
                    img.style.display = "block";
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Modal da foto
        function abrirModal() {
            const img = document.getElementById("previewImagem");
            const modalImg = document.getElementById("modalImagem");
            modalImg.src = img.src;
            new bootstrap.Modal(document.getElementById('fotoModal')).show();
        }
    </script>
}

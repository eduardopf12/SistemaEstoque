@model IEnumerable<Estoque.Models.Movimentacao>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 80px; /* espaço maior para o footer */
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: left;
        }

        th {
            background-color: #eee;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        /* Footer fixo para PDF */
        .footer {
            width: 100%;
            position: fixed;
            bottom: 0;
            text-align: center;
            font-size: 10px;
            color: #555;
            padding-top: 5px;
        }
    </style>
</head>
<body>

    <h2>Relatório de Movimentações</h2>

    <table>
        <thead>
            <tr>
                <th>Produto</th>
                <th>Tipo</th>
                <th>Quantidade</th>
                <th>Unidade</th>
                <th>Setor Responsável</th>
                <th>Patrimônio</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Produto?.Nome</td>
                    <td>@m.Tipo</td>
                    <td>@m.Quantidade</td>
                    <td>@m.Unidade</td>
                    <td>@m.Setor</td>
                    <td>@(string.IsNullOrEmpty(m.Patrimonio) ? "-" : m.Patrimonio)</td>
                    <td>@m.Data.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer">
        © 2026 - Sistema de Estoque | Relatório gerado em @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
    </div>

</body>
</html>
